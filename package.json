{
  "name": "ahead",
  "version": "1.0.0",
  "description": "Command line tool to scan security header. Aims to be a CLI equivalent to securityheaders.io",
  "main": "./dist/index.js",
  "scripts": {
    "test:security": "nsp check --reporter summary",
    "test": "jest --forceExit --coverage",
    "test:no-coverage": "jest --forceExit",
    "lint": "eslint --color --ext .jsx,.js,.spec.jsx src",
    "lint:fix": "eslint --color --ext .jsx,.js,.spec.jsx src --fix",
    "precommit": "lint-staged",
    "prepush": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ANDigital/security-headers.git"
  },
  "keywords": [
    "security",
    "node",
    "ci",
    "testing",
    "tool"
  ],
  "bin": {
    "ahead": "./src/index.js"
  },
  "author": "Matt Rosenquist <mrosenquist@and.digital>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ANDigital/security-headers/issues"
  },
  "files": [
    "./dist/*"
  ],
  "homepage": "https://github.com/ANDigital/security-headers#readme",
  "dependencies": {
    "chalk": "^2.3.0",
    "commander": "^2.13.0",
    "lodash.intersection": "^4.4.0",
    "node-fetch": "^1.7.3"
  },
  "devDependencies": {
    "depcheck": "^0.6.8",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "nsp": "^3.1.0",
    "strip-ansi": "^4.0.0",
    "text-table": "^0.2.0"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "globals": {
      "NODE_ENV": "test"
    },
    "testEnvironment": "node",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ],
    "moduleDirectories": [
      "<rootDir>/src",
      "node_modules"
    ],
    "cacheDirectory": "./node_modules/.cache/jest",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!{node_modules,coverage,dist}/**",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 1,
        "functions": 1,
        "lines": 1,
        "statements": 1
      }
    },
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "coverageDirectory": "coverage"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  },
  "greenkeeper": {
    "ignore": [
      "eslint-plugin-jsx-a11y"
    ]
  }
}
